
# extract and disassemble lower+upper part of U500 ROM
u500:
	split -b 32768 U500_04952-10028_MBM27C512.BIN
	mv xaa U500_04952-10028_MBM27C512-lower.BIN
	mv xab U500_04952-10028_MBM27C512-upper.BIN
	z80dasm -t -a -g 0x8000  U500_04952-10028_MBM27C512-lower.BIN -o U500_04952-10028_MBM27C512-lower.BIN.dasm
	z80dasm -t -a -g 0x8000  U500_04952-10028_MBM27C512-upper.BIN -o U500_04952-10028_MBM27C512-upper.BIN.dasm
